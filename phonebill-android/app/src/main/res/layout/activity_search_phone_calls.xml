<?xml version="1.0" encoding="utf-8"?>
<androidx.constraintlayout.widget.ConstraintLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    xmlns:tools="http://schemas.android.com/tools"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    tools:context=".SearchPhoneCalls">

    <EditText
        android:id="@+id/customer_sc_editText"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:hint="@string/name_format"
        app:layout_constraintBottom_toTopOf="@+id/startTime_sc_editText"
        app:layout_constraintEnd_toEndOf="parent"
        app:layout_constraintHorizontal_bias="0.5"
        app:layout_constraintStart_toStartOf="parent"
        app:layout_constraintTop_toTopOf="parent"
        android:importantForAutofill="no"
        android:inputType="date" />

    <EditText
        android:id="@+id/startTime_sc_editText"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:text="8/8/2020 1:1 AM"
        app:layout_constraintBottom_toTopOf="@+id/endTime_sc_editText"
        app:layout_constraintEnd_toEndOf="parent"
        app:layout_constraintHorizontal_bias="0.5"
        app:layout_constraintStart_toStartOf="parent"
        app:layout_constraintTop_toBottomOf="@+id/customer_sc_editText"
        android:importantForAutofill="no"
        android:inputType="date" />

    <EditText
        android:id="@+id/endTime_sc_editText"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:text="8/9/2020 11:1 PM"
        app:layout_constraintBottom_toTopOf="@+id/search_phone_calls_button"
        app:layout_constraintEnd_toEndOf="parent"
        app:layout_constraintHorizontal_bias="0.5"
        app:layout_constraintStart_toStartOf="parent"
        app:layout_constraintTop_toBottomOf="@+id/startTime_sc_editText"
        android:importantForAutofill="no"
        android:inputType="date" />

    <Button
        android:id="@+id/search_phone_calls_button"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:text="@string/search"
        app:layout_constraintTop_toBottomOf="@+id/endTime_sc_editText"
        app:layout_constraintBottom_toBottomOf="parent"
        app:layout_constraintEnd_toEndOf="parent"
        app:layout_constraintStart_toStartOf="parent" />
</androidx.constraintlayout.widget.ConstraintLayout>